    "outDir": "./dist",   // Our compiled files will be placed here
    "rootDir": "./src/", // Our TypeScript files
    "lib": ["esnext", "dom"],
    "target": "es2015",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "module": "commonjs"
  },
  "exclude": [
    "**/*.spec.js"
  ]
}
